/* App Module */
var app = angular.module('app', [
  'ngRoute',
  'appControllers'
]);

/* Controllers */
var appControllers = angular.module('appControllers', []);

appControllers.controller('ListIndexController', ['$scope', '$http',
  function($scope, $http) {
    $http.get('/lists.json').success(function(data) {
      $scope.lists = data;
      $scope.orderProp = 'created_at';
    });
  }]);

appControllers.controller('ListShowController', ['$scope', '$routeParams', '$http',
  function($scope, $routeParams, $http) {
    $http.get('/lists/' + $routeParams.id + '.json').success(function(data) {
      $scope.list = data;
    });
  }]);

/* Routes */
app.config(['$routeProvider',
  function($routeProvider) {
    $routeProvider.
      when('/lists/in-public-directory', {
        templateUrl: 'test.html',
        controller: 'ListIndexController'
      }).
      when('/lists', {
        /* in app/assets/angular/templates/ directory */
        templateUrl: "<%= asset_path('templates/index.html') %>",
        controller: 'ListIndexController'
      }).
      when('/lists/:id', {
        /* in app/assets/angular/templates/ directory */
        templateUrl: "<%= asset_path('templates/show.html') %>",
        controller: 'ListShowController'
      }).
      otherwise({
        redirectTo: '/dashboard'
      });
  }]);